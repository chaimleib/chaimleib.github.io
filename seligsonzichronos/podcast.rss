---
---
{%- assign series = site.collections | where:"label","seligsonzichronos" | first -%}
{%- assign tracks = site.seligsonzichronos | sort: 'name' | reverse -%}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xml:lang="{{ site.lang }}">
	<channel>
		<atom:link href="{{ page.url | absolute_url }}" rel="self" type="application/rss+xml" />
		<title>{{ series.title | xml_escape }}</title>
		<description>{{ series.description | strip_html | strip | xml_escape }}</description>
		<link>{{ series.url | absolute_url }}</link>
		<language>{{ site.lang }}</language>
		<managingEditor>{{ site.email | xml_escape}} ({{ site.author | xml_escape }})</managingEditor>
		<webMaster>{{ site.email | xml_escape }} ({{ site.author | xml_escape }})</webMaster>
		<copyright>2018-{{ site.time | date:"%Y" }} {{ site.title | xml_escape }}</copyright>
		<pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
		<lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    {%- if series.image %}
		<image>
			<link>{{ series.url | absolute_url }}</link>
			<url>{{ series.image | absolute_url }}</url>
			<title>{{ series.title | xml_escape }}</title>
		</image>
    {% endif -%}
		<itunes:subtitle>{{ series.description | xml_escape }}</itunes:subtitle>
		<itunes:author>{{ site.author | xml_escape }}</itunes:author>
		<itunes:summary>{{ series.description | strip_html | strip | xml_escape }}</itunes:summary>
		<itunes:keywords>{{ series.keywords | join:", "}}</itunes:keywords>
		<itunes:owner>
			<itunes:name>{{ site.author | xml_escape }}</itunes:name>
			<itunes:email>{{ site.email | xml_escape }}</itunes:email>
		</itunes:owner>
		<itunes:image href="{{ series.image | absolute_url }}" />
		<itunes:category text="News &amp; Politics">
			<itunes:category text="Religion &amp; Spirituality">
				<itunes:category text="Judaism" />
			</itunes:category>
		</itunes:category>
		<itunes:category text="Society &amp; Culture">
			<itunes:category text="Philosophy" />
		</itunes:category>
		<itunes:explicit>no</itunes:explicit>
{%- for track in tracks %}
		<item>
			{%- capture title -%}
			#{{ track.order }}: {{ track.title }}
			{%- endcapture -%}
			<title>{{ title | xml_escape }}</title>
			<link>{{ track.url | absolute_url }}</link>
			<description>{{ track.excerpt | strip_html | strip | xml_escape }}</description>
			{%- assign f = track.file | first %}
			<guid isPermaLink="true">{{ track.url | absolute_url }}</guid>
			<enclosure
				url="{{ series.url | absolute_url }}{{ track.name | uri_escape }}{{ f.ext }}"
				length="{{ f.size }}"
				type="{{ f.mime }}"
				/>
			<itunes:author>{{ site.author | xml_escape }}</itunes:author>
			<itunes:order>{{ forloop.rindex }}</itunes:order>
			<itunes:summary>{{ track.excerpt | strip_html | strip | xml_escape }}</itunes:summary>
			<itunes:duration>{{ f.duration }}</itunes:duration>
			<itunes:keywords>{{ track.keywords | join:", "}}</itunes:keywords>
			<itunes:explicit>{{ track.explicit }}</itunes:explicit>
			<itunes:block>{{ track.block }}</itunes:block>
		</item>
{%- endfor %}
	</channel>
</rss>
